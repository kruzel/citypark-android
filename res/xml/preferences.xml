<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/background">
        <PreferenceCategory
        	android:title="Navigation Options">
        	<CheckBoxPreference
        		android:title="Speak directions"
        		android:defaultValue="false"
        		android:key="tts"
        		/>
        	<CheckBoxPreference
        	android:title="Keep screen awake"
        	android:defaultValue="true"
        		android:key="keepAwake" />
        </PreferenceCategory>
        	<PreferenceCategory
                android:title="Distance Units">
                <ListPreference
                        android:title="Units"
                        android:summary="Select unit of distance"
                        android:key="unitsPref"
                        android:defaultValue="km"
                        android:entries="@array/unitsArray"
                        android:entryValues="@array/unitsValues" />
        </PreferenceCategory>
        	<CheckBoxPreference android:key="acra.disable"
        android:title="@string/pref_disable_acra"
        android:defaultValue="false"/>
</PreferenceScreen>